          <GradientStop Color="#00508E50" Offset="1"/>
        </RadialGradientBrush>
      </Rectangle.Fill>
    </Rectangle>

    <Grid x:Name="LayoutRoot">
      <Grid.Resources>
        <Style TargetType="{x:Type StackPanel}">
          <Setter Property="Margin" Value="10"/>
        </Style>
      </Grid.Resources>

      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition Width="*" />
      </Grid.ColumnDefinitions>
      <Grid.RowDefinitions>
        <RowDefinition/>
      </Grid.RowDefinitions>

      <StackPanel>
        <Expander IsExpanded="True" Header="Projects"  >
          <ListBox>
            <ListBoxItem>
              <Hyperlink Name="ShowProjectListButton" 
                         Click="ShowProjectList">Show list</Hyperlink>
            </ListBoxItem>
            <ListBoxItem>
              <Hyperlink Name="NewProjectButton" 
                         Click="NewProject">Add new</Hyperlink>
            </ListBoxItem>
            <ListBoxItem>
              <Hyperlink Name="CloseProjectButton"  
                         Click="CloseProject">Close project</Hyperlink>
            </ListBoxItem>
          </ListBox>
        </Expander>
        <Expander IsExpanded="True" Header="Resources">
          <ListBox>
            <ListBoxItem>
              <Hyperlink Name="ShowResourceListButton" Click="ShowResourceList">Show list</Hyperlink>
            </ListBoxItem>
            <ListBoxItem>
              <Hyperlink Name="NewResourceButton" Click="NewResource">Add new</Hyperlink>
            </ListBoxItem>
          </ListBox>
        </Expander>
        <Expander IsExpanded="True" Header="Admin">
          <ListBox>
            <ListBoxItem>
              <Hyperlink Name="ShowRolesEditButton" Click="ShowRolesEdit">Edit roles</Hyperlink>
            </ListBoxItem>
          </ListBox>
        </Expander>
        <StackPanel Margin="5">
          <ListBox Opacity=".65">
            <ListBoxItem>
              <TextBlock Name="CurrentUser" 
                         Text="Not logged in" 
                         Foreground="Blue"
                         FontSize="12"
                         />
            </ListBoxItem>
            <ListBoxItem>
              <Hyperlink Name="LoginButton" Click="LogInOut">
                <TextBlock Name="LoginButtonText" Text="Log in" 
                           Margin="0"
                           Foreground="Blue"
                           FontSize="12" />
              </Hyperlink>
            </ListBoxItem>
          </ListBox>
        </StackPanel>
      </StackPanel>
      <DockPanel Grid.Column="1" Name="contentArea" 
                 Margin="5,15,20,15" />
    </Grid>
  </Grid>
</Window>
